@model IEnumerable<Blog>
@{
    ViewData["Title"] = "Index";

}

<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">


        <div class="create-btn mb-3">
            <a asp-controller="Blog" asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i></a>
        </div>


        <table class="table table-bordered">
            <thead>
                <tr>

                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        PublisDate
                    </th>

                    <th style="text-align: center;">
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var blog in Model)
                {
                    <tr>
                        <td>
                            <img src="~/img/@blog.Image" alt="Blog Image" />
                        </td>
                        <td>
                            @Html.Raw(blog.Title)

                        </td>
                        <td>
                            @Html.Raw(blog.Desc)
                        </td>
                        <td>
                            @Html.Raw(blog.Date.ToString("MM-dd-yyyy"))
                        </td>
                        <td style="text-align: center;">
                            <a asp-action="Detail" asp-route-id="@blog.Id" class="btn btn-info"><i class="mdi mdi-information mx-0"></i></a>
                            <a asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></a>
                            <form style="display:inline-block" asp-action="Delete" asp-route-id="@blog.Id" method="post">
                                <button type="submit" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></button>
                            </form>

                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

