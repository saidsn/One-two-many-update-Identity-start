@model List<Book>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
        <div class="create-btn mb-3">
            <a asp-controller="Book" asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i></a>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        <h4>Name</h4>
                    </th>
                    <th>
                        <h4>Description</h4>
                    </th>
                    <th style="text-align: center;">
                        <h4>Setting</h4>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>
                            @book.Name
                        </td>
                        <td>
                            @book.Description
                        </td>

                        <td style="text-align: center;">
                            <a asp-action="Detail" asp-route-id="@book.Id" class="btn btn-info"><i class="mdi mdi-information mx-0"></i></a>
                            <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></a>
                            <form style="display:inline-block" asp-action="Delete" asp-route-id="@book.Id" method="post">
                                <button type="submit" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></button>
                            </form>

                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>

