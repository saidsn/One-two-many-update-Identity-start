
@model BlogHeader
@{
    ViewData["Title"] = "Detail";
}

<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Header
                    </th>
                    <th>
                        HeaderDesc
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.Raw(Model.Header)
                    </td>
                    <td>
                        @Html.Raw(Model.HeaderDesc)
                    </td>
                </tr>
            </tbody>
        </table>
        <a asp-controller="BlogHeader" asp-action="Index" class="btn btn-primary my-2">Back</a>

    </div>
</div>



