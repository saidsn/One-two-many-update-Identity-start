


@model IEnumerable<Social>
@{
    ViewData["Title"] = "Social";
}

<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
        <div class="create-btn mb-3">
            <a asp-controller="Social" asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i></a>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        <h4>Name</h4>
                    </th>
                    <th>
                        <h4>Url</h4>
                    </th>
                    <th style="text-align: center;">
                        <h4>Setting</h4>
                    </th>
                </tr>
            </thead>
            <tbody id="table-body">
                @foreach (var social in Model)
                {
                <tr>
                    <td>
                        @social.Name
                    </td>
                    <td>
                        @social.Url
                    </td>

                    <td style="text-align: center;">
                        <a asp-area="AdminArea" asp-controller="Social" asp-action="Detail" asp-route-id="@social.Id" class="btn btn-info"><i class="mdi mdi-information mx-0"></i></a>
                        <a asp-area="AdminArea" asp-controller="Social"  asp-action="Edit" asp-route-id="@social.Id" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></a>
                        <button class="btn btn-danger delete-social" data-id="@social.Id"><i class="mdi mdi-delete-forever"></i></button>

                    </td>
                </tr>
                }


            </tbody>
        </table>
    </div>
</div>

